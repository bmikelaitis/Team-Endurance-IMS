<%= render 'shared/page_title', title: "Receipt Details: " %> 
<div class="right">
    <%= link_to edit_receipt_path(@receipt) do %>
    <i class="glyphicon glyphicon-cog cog"></i>
    <% end %>
</div>
<div class="table-container">
	<table class="data-table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Subject</th>
				<th>Vendor</th>
				<th>Department</th>
				<th>Purchaser</th>
				<th>Purchase Option</th>
				<th>Tax Paid</th>
				<th>Total Amount</th>
			</tr>
		</thead>
		
        <tbody>
			<tr>
				<td><%= @receipt.date.try(:strftime, "%m/%d/%Y") %></td>
				<td><%= @receipt.subject.subject_name %></td>
				<td><%= @receipt.vendor.vendor_name %></td>
				<td><%= @receipt.department.department_name %></td>
				<td><%= @receipt.purchaser.purchaser_name %></td>
			  <td><%= @receipt.puroption.puroption_name %></td>
				<td>$<%= @receipt.tax_amount %></td>
				<td>$<%= @receipt.purchase_amount %></td>
				
      
			</tr>		

        
        </table>
  <div class="row">
    <div class="col-lg-6 center">
        <div class="index">
        <%= render "index" %>
        </div>
    </div>

    <div class="col-lg-6 center user_info">
        <%= form_for([@receipt, @image], html: { multipart: true, class: "dropzone"}) do |f|  %>
        <div class="fallback">
          <%= f.hidden_field :receipt_id, :value => @receipt.id %>
          <%= f.file_field :file %><br>
          <%= f.submit "Upload a File" %>
        </div>
        <% end %>
    </div>
  </div>
</div>

