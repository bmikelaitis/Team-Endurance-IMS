<%= render 'shared/page_title', title: "All Purchase Options" %>
<p><%= link_to new_puroption_path do %>
    <i class="btn btn-lg btn-success floatright" >Add Purchase Options</i>
    <% end %>
</p>

<div class="table-container col-lg-6 col-lg-offset-3 col-xs-12">
	<table class="data-table">
		<thead>
			<tr>
				<th>Purchase Option</th>
				<th>Description</th>
				<th>Edit</th>
			</tr>
		</thead>
		<% @puroptions.each do |puroption| %>

		<tbody>
			<tr>
				<td><%= puroption.puroption_name %></td>
				<td><%= puroption.description %></td>
                <td><%= link_to puroption_path(puroption) do %>
                        <i class="glyphicon glyphicon-info-sign" style="color:#377bb5"></i>
                    <% end %>     
                    <%= link_to edit_puroption_path(puroption) do %>
                        <i class="glyphicon glyphicon-cog" style="color:grey"></i> </td>
                    <% end %></td>
			</tr>		
		</tbody>
		<% end %>
	</table>
	    

      
      <div class="row">
                <div class= "col-lg-3 col-lg-offset-4 right">
                <%= will_paginate %>
                </div>
       </div>
</div>
